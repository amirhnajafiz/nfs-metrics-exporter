{
    "variable": {
      "TAG": {
        "default": "latest"
      }
    },
    "group": {
      "default": {
        "targets": ["nfs-metrics-exporter"]
      }
    },
    "target": {
      "nfs-metrics-exporter": {
        "context": ".",
        "dockerfile": "build/Dockerfile",
        "platforms": ["linux/amd64", "linux/arm64"],
        "tags": ["ghcr.io/amirhnajafiz/nfs-metrics-exporter:${TAG}"],
        "output": ["type=registry"]
      }
    }
  }
  